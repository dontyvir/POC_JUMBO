<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>sv-services</artifactId>
		<groupId>cl.cencosud.jumbo.services</groupId>
		<version>2.0.12-SNAPSHOT</version>
	</parent>

	<groupId>cl.cencosud.jumbo.services.frontofficewebcontent.enterprise</groupId>
	<artifactId>front-office-webcontent-enterprise</artifactId>
	<packaging>ear</packaging>

	<name>front-office-webcontent-enterprise</name>

	<build>
		<finalName>jumbo-${project.artifactId}</finalName>
		<plugins>
			<plugin>
				<groupId>org.appfuse.plugins</groupId>
				<artifactId>maven-warpath-plugin</artifactId>
				<extensions>true</extensions>
				<executions>
					<execution>
						<goals>
							<goal>add-classes</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<version>${j2ee.ear.version}</version>
					<applicationName>FO</applicationName>
					<displayName>jumbo-webcontent</displayName>
					<skinnyWars>true</skinnyWars>
					<modules>
						<webModule>
							<groupId>cl.cencosud.jumbo.services.frontofficewebcontent.webapp</groupId>
							<artifactId>front-office-webcontent-webapp</artifactId>
							<contextRoot>FO_WebContent</contextRoot>
							<bundleFileName>front-office-webcontent-webapp.war</bundleFileName>
						</webModule>
						<webModule>
							<groupId>cl.cencosud.jumbo.services.foimgs.webapp</groupId>
							<artifactId>front-office-fo-imgs-webapp</artifactId>
							<contextRoot>FO_IMGS</contextRoot>
							<bundleFileName>front-office-fo-imgs-webapp.war</bundleFileName>
						</webModule>
					</modules>
					<generateApplicationXml>true</generateApplicationXml>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>was6-maven-plugin</artifactId>
				<version>1.2</version>
				<configuration>
					<verbose>true</verbose>
					<wasHome>${was6home}</wasHome>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>cl.cencosud.jumbo.services.frontofficewebcontent.webapp</groupId>
			<artifactId>front-office-webcontent-webapp</artifactId>
			<version>${project.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>cl.cencosud.jumbo.services.frontofficewebcontent.webapp</groupId>
			<artifactId>front-office-webcontent-webapp</artifactId>
			<version>${project.version}</version>
			<type>warpath</type>
		</dependency>
		<dependency>
			<groupId>cl.cencosud.jumbo.services.foimgs.webapp</groupId>
			<artifactId>front-office-fo-imgs-webapp</artifactId>
			<version>${project.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>cl.cencosud.jumbo.services.foimgs.webapp</groupId>
			<artifactId>front-office-fo-imgs-webapp</artifactId>
			<version>${project.version}</version>
			<type>warpath</type>
		</dependency>
	</dependencies>
</project>
